<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
    <!-- Primary brand color. -->
        <item name="colorPrimary">#AB434040</item>
        <item name="colorPrimaryVariant">@color/pink_light</item>
        <item name="colorOnPrimary">#AB434040</item>
        <item name="colorAccent">@color/pink_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_dark</item>
        <item name="colorSecondaryVariant">@color/gray_light</item>
        <item name="colorOnSecondary">@color/gray_dark</item>

        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        -->
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryVariant">@color/pink_light</item>
    <item name="colorOnPrimary">@color/white</item>

    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>


    <style name="datePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/pink_dark</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/pink_dark</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/pink_light</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/pink_dark</item>
    </style>

    <style name="ListFont" parent="@android:style/Widget.ListView">
        <item name="android:textColor">#AB434040</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
    </style>

</resources>